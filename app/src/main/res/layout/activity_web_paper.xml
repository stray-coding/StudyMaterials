<?xml version="1.0" encoding="utf-8"?>
<com.coding.studymaterials.view.WindowInsetsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.WebPaperActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/top_bar"
            layout="@layout/top_bar"
            android:fitsSystemWindows="true" />

        <WebView
            android:id="@+id/wv_paper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:overScrollMode="never" />
    </FrameLayout>

</com.coding.studymaterials.view.WindowInsetsFrameLayout>